{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",                     // Specify pytest as the module
            "console": "integratedTerminal",
            "justMyCode": false,                    // Allow debugging into external/package code
            "args": [
                "-s",                               // Prevent pytest from capturing console output
                "--maxfail=1",                      // Stop on the first failure (optional)
                "${relativeFile}"                   // Run the current test file
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Ensure the package is on the Python path
            }
        }
    ]
}
